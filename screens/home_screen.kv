<NewsScreen>:
    name: "homepage"
    FloatLayout:
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        # ScrollView for News Items
        ScrollView:
            size_hint: (1, None)
            height: 500  # Increased height of the ScrollView
            pos_hint: {"top": 0.85}  # Adjust this to position scroll area correctly
            do_scroll_x: False

            BoxLayout:
                id: news_box  # News items will be added here
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height  # This will make the box grow dynamically with the news content
                spacing: dp(10)
                padding: dp(10)

        # Bottom navigation bar
        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)
            pos_hint: {"x": 0, "y": 0}

            MDIconButton:
                icon: "home"
                on_release: app.home_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "forest"
                on_release: app.tree_reg_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "trophy"
                on_release: app.leaderboard_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "map"
                on_release: app.map_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "account"
                on_release: app.profile_page()
                theme_text_color: "Custom"
                text_color: "white"
