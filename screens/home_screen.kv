<HomepageScreen>:
    FloatLayout:

        # Top-left background image
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        # Bottom-right background image (rotated)
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        # Main content over background
        BoxLayout:
            orientation: 'vertical'
            spacing: 0

            # Horizontal row for challenges
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.7
                spacing: 5
                padding: 10

                Button:
                    text: "challenge 1"
                    on_release: root.challenge_1()

                Button:
                    text: "challenge 2"
                    on_release: root.challenge_2()

                Button:
                    text: "challenge 3"
                    on_release: root.challenge_3()

            Widget:  # Spacer
                size_hint_y: 0.5

            # News buttons (vertical)
            MDBoxLayout:
                orientation: "vertical"
                Button:
                    text: "news 1"
                    size_hint_y: 0.4
                    on_release: root.news_1()
                Button:
                    text: "news 2"
                    size_hint_y: 0.4
                    on_release: root.news_2()
                Button:
                    text: "news 3"
                    size_hint_y: 0.4
                    on_release: root.news_3()

            # Bottom navigation bar
            MDBoxLayout:
                size_hint_y: None
                height: dp(56)
                md_bg_color: app.theme_cls.primary_color
                padding: dp(10)

                MDIconButton:
                    icon: "home"
                    on_release: root.home_page()
                    theme_text_color: "Custom"
                    text_color: "white"

                Widget:
                    size_hint_x: 0.5

                MDIconButton:
                    icon: "check-circle"
                    on_release: root.challenges_page()
                    theme_text_color: "Custom"
                    text_color: "white"

                Widget:
                    size_hint_x: 0.5

                MDIconButton:
                    icon: "trophy"
                    on_release: root.leaderboard_page()
                    theme_text_color: "Custom"
                    text_color: "white"

                Widget:
                    size_hint_x: 0.5

                MDIconButton:
                    icon: "map"
                    on_release: root.map_page()
                    theme_text_color: "Custom"
                    text_color: "white"

                Widget:
                    size_hint_x: 0.5

                MDIconButton:
                    icon: "account"
                    on_release: root.profile_page()
                    theme_text_color: "Custom"
                    text_color: "white"
