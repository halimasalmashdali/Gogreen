<HomepageScreen>:
    FloatLayout:
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        Widget:
            size_hint_y:0.05
        ScrollView:
            do_default_tab: True
            GridLayout:
                id: news
                cols: 1  
                spacing: dp(20)
                padding: dp(5)
                size_hint_y: None
                height: self.minimum_height
                
                Button:
                    text: "news"
                    size_hint_y: None
                    height: dp(100)
                Button:
                    text: "news"
                    size_hint_y: None
                    height: dp(100)
                Button:
                    text: "news"
                    size_hint_y: None
                    height: dp(100)

        # Custom bottom bar - NO FAB SPACE
        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)

            MDIconButton:
                icon: "home"
                on_release: app.home_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:  # Spacer
                size_hint_x: 0.5

            MDIconButton:
                icon: "forest"
                on_release: app.treetracker_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:  # Spacer
                size_hint_x: 0.5

            MDIconButton:
                icon: "trophy"
                on_release: app.leaderboard_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:  # Spacer
                size_hint_x: 0.5

            MDIconButton:
                icon: "map"
                on_release: app.map_page()
                theme_text_color: "Custom"
                text_color: "white"


            Widget:  # Spacer
                size_hint_x: 0.5

            MDIconButton:
                icon: "account"
                on_release: app.profile_page()
                theme_text_color: "Custom"
                text_color: "white"
