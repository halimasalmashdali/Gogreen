<LeaderboardScreen>:
    name: 'leaderboard'

    FloatLayout:
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        BoxLayout:
            orientation: "vertical"
            padding: dp(10)
            spacing: dp(10)

            MDLabel:
                text: "You are currently in"
                halign: "center"
                font_style: "Subtitle1"

            MDLabel:
                text: "[b][color=#8B4513]Bronze[/color] League[/b]"
                markup: True
                halign: "center"
                font_style: "H5"

            BoxLayout:
                orientation: "horizontal"
                spacing: dp(10)
                size_hint_y: None
                height: dp(100)
                id: top3_box

            ScrollView:
                MDList:
                    id: leaderboard_list

            MDLabel:
                text: "Reach 30 points to move to [b]Silver League[/b]"
                markup: True
                halign: "center"
                font_style: "Body2"

            MDLabel:
                text: "Season reset in 30 days, 23:59:59"
                halign: "center"
                font_style: "Caption"

        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)

            MDIconButton:
                icon: "home"
                on_release: root.home_page()
                theme_text_color: "Custom"
                text_color: "white"
            Widget:
                size_hint_x: 0.5
            MDIconButton:
                icon: "check-circle"
                on_release: root.challenges_page()
                theme_text_color: "Custom"
                text_color: "white"
            Widget:
                size_hint_x: 0.5
            MDIconButton:
                icon: "trophy"
                on_release: root.leaderboard_page()
                theme_text_color: "Custom"
                text_color: "white"
            Widget:
                size_hint_x: 0.5
            MDIconButton:
                icon: "map"
                on_release: root.map_page()
                theme_text_color: "Custom"
                text_color: "white"
            Widget:
                size_hint_x: 0.5
            MDIconButton:
                icon: "account"
                on_release: root.profile_page()
                theme_text_color: "Custom"
                text_color: "white"
