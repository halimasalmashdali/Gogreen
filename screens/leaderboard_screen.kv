<LeaderboardRow@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(50)
    spacing: dp(10)
    padding: dp(10)
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    Label:
        text: root.nickname
        font_size: "16sp"
        color: (0, 0, 0, 1)
        font_name: "assets/Poppins-SemiBold.ttf"

    Label:
        text: str(root.trees_planted)
        font_size: "16sp"
        halign: "right"
        color: (0, 0, 0, 1)
        font_name: "assets/Poppins-SemiBold.ttf"

<LeaderboardScreen>:
    name: 'leaderboard'

    FloatLayout:

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {"center_x": 0.5, "top": 0.94}
            spacing: dp(6)

            Label:
                text: "[color=434343]Leaderboard of[/color]"
                markup: True
                halign: 'center'
                valign: 'middle'
                font_size: "14sp"
                size_hint_y: None
                height: self.texture_size[1]
                font_name: "assets/Poppins-SemiBold.ttf"

            Label:
                text: "[size=48][b][color=434343]Go[/color][color=528265]Green[/color][/b][/size]"
                markup: True
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                font_name: "assets/Poppins-SemiBold.ttf"

        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            padding: [dp(10), dp(170), dp(10), dp(70)]
            size_hint: 1, 1

            BoxLayout:
                id: top3_box
                size_hint_y: None
                height: dp(100)
                orientation: "horizontal"
                spacing: dp(20)

            ScrollView:
                size_hint_y: None
                height: dp(250)
                MDList:
                    id: leaderboard_list

    MDBoxLayout:
        size_hint_y: None
        height: dp(56)
        md_bg_color: app.theme_cls.primary_color
        padding: dp(10)
        pos_hint: {"x": 0, "y": 0}

        MDIconButton:
            icon: "home"
            on_release: root.manager.current = "homepage"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "forest"
            on_release: app.treetracker_page()
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "trophy"
            on_release: root.manager.current = "leaderboard"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "map"
            on_release: root.manager.current = "map"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "account"
            on_release: root.manager.current = "profile"
            theme_text_color: "Custom"
            text_color: "white"
