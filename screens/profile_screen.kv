<ProfileScreen>:
    name: "profile"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)

        # Top section with "My Profile" and Settings icon
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(60)

            Label:
                text: "[b][color=528265]My Profile[/color][/b]"
                font_size: "24sp"
                markup: True
                halign: "center"
                valign: "middle"
                font_name: "assets/Poppins-SemiBold.ttf"
                text_size: self.size
                size_hint_x: 0.8

            MDIconButton:
                icon: "cogs"
                theme_text_color: "Custom"
                icon_color: 0.325, 0.510, 0.396, 1
                size_hint_x: 0.2
                on_release: root.manager.current = 'settings'

        # Scrollable challenge section
        ScrollView:
            MDBoxLayout:
                id: challenges_container
                orientation: "horizontal"
                padding: dp(10)
                spacing: dp(10)
                size_hint_y: None
                height: dp(100)
                adaptive_width: True

        # Congrats button
        MDFlatButton:
            text: "Congrats"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release: root.show_congrats()

        # Bottom navigation bar (original version restored)
        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)
            pos_hint: {"x": 0, "y": 0}

            MDIconButton:
                icon: "home"
                on_release: root.manager.current = "homepage"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "check-circle"
                on_release: root.manager.current = "challenges"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "trophy"
                on_release: root.manager.current = "leaderboard"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "map"
                on_release: root.manager.current = "map"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "account"
                on_release: root.manager.current = "profile"
                theme_text_color: "Custom"
                text_color: "white"
