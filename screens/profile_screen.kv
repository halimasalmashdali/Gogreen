<ProfileScreen>:
    name: 'profile'

    FloatLayout:

        # Top-left decor
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        # Bottom-right rotated decor
        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix

        # Profile title
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(100)
            pos_hint: {"top": 1}
            spacing: dp(6)

            Label:
                text: "[b][color=528265]My Profile[/color][/b]"
                markup: True
                font_size: "24sp"
                font_name: "assets/Poppins-SemiBold.ttf"
                halign: "center"
                valign: "middle"
                text_size: self.size
                size_hint: 1, 1

        # Main content (placeholder for profile info)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.parent.height - dp(156)
            padding: dp(10)

            # Add profile content here

        # Bottom navigation bar (always visible)
        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)
            pos_hint: {"x": 0, "y": 0}

            MDIconButton:
                icon: "home"
                on_release: root.manager.current = "homepage"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "forest"
                on_release: app.treetracker_page()
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "trophy"
                on_release: root.manager.current = "leaderboard"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "map"
                on_release: root.manager.current = "map"
                theme_text_color: "Custom"
                text_color: "white"

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "account"
                on_release: root.manager.current = "profile"
                theme_text_color: "Custom"
                text_color: "white"
