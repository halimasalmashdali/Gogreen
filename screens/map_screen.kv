#:import MapView kivy_garden.mapview.MapView
<MapScreen>:
    name: 'map'

    FloatLayout:
        MapView:
            id: mapview
            lat: 41
            lon: 69
            zoom: 3
        MapMarkerPopup:
            source: "custom_marker.png"
            lat: 41
            lon: 69
            Button:
                on_release:
                    #root.center_on(41,69)
                    print(root.get_bbox())



    MDBoxLayout:
        size_hint_y: None
        height: dp(56)
        md_bg_color: app.theme_cls.primary_color
        padding: dp(10)
        pos_hint: {"x": 0, "y": 0}

        MDIconButton:
            icon: "home"
            on_release: root.manager.current = "homepage"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "forest"
            on_release: app.treetracker_page()
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "trophy"
            on_release: root.manager.current = "leaderboard"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "map"
            on_release: root.manager.current = "map"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "account"
            on_release: root.manager.current = "profile"
            theme_text_color: "Custom"
            text_color: "white"
