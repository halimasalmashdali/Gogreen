#:import MapView kivy_garden.mapview.MapView
<MapScreen>:
    name: 'map'

    FloatLayout:
        MapView:
            zoom: 11
            lat: 41.2995
            lon: 69.2401

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: 0, self.parent.height - 150

        Image:
            source: "assets/photos/decor.png"
            size_hint: None, None
            size: 180, 180
            pos: self.parent.width - 180, -30
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix




    MDBoxLayout:
        size_hint_y: None
        height: dp(56)
        md_bg_color: app.theme_cls.primary_color
        padding: dp(10)
        pos_hint: {"x": 0, "y": 0}

        MDIconButton:
            icon: "home"
            on_release: root.manager.current = "homepage"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "check-circle"
            on_release: root.manager.current = "challenges"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "trophy"
            on_release: root.manager.current = "leaderboard"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "map"
            on_release: root.manager.current = "map"
            theme_text_color: "Custom"
            text_color: "white"

        Widget:
            size_hint_x: 0.5

        MDIconButton:
            icon: "account"
            on_release: root.manager.current = "profile"
            theme_text_color: "Custom"
            text_color: "white"


