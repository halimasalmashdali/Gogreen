<ChallengeDetailScreen>:
    name: "challenge_detail"




    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Challenge Details"
            left_action_items: [["arrow-left", lambda x: setattr(app.root, 'current', 'profile')]]

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)

            MDLabel:
                id: challenge_name
                text: "Challenge Name"
                font_style: "H5"
                halign: "center"

            MDLabel:
                id: challenge_desc
                text: "Description"
                halign: "center"

            MDLabel:
                id: challenge_points
                text: "Points: 0"
                halign: "center"
